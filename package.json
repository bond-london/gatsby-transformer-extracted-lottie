{
  "name": "@bond-london/gatsby-transformer-extracted-lottie",
  "sideEffects": false,
  "version": "3.0.4",
  "description": "Gatsby plugin to transform lottie files and extract a preview svg",
  "author": "Nick Randell <nick.randell@bond.fi>",
  "license": "MIT",
  "keywords": [
    "gatsby",
    "gatsby-plugin",
    "gatsby-plugin-typescript",
    "typescript",
    "lottie"
  ],
  "repository": {
    "url": "https://github.com/bond-london/gatsby-transformer-extracted-lottie"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsc --outDir dist",
    "dev": "tsc -w --outDir dist",
    "prepare": "cross-env NODE_ENV=production yarn run lint && yarn run build && husky install",
    "format": "prettier --write \"**/*.{js,jsx,json,ts,tsx}\"",
    "lint": "eslint --max-warnings 0 \"**/*.{js,jsx,ts,tsx}\"",
    "release": "release-it"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/node": "^17.0.41",
    "@types/svgo": "^2.6.3",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "gatsby": "^4.16.0",
    "gatsby-source-filesystem": "^4.16.0",
    "husky": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "release-it": "^15.0.0",
    "typescript": "^4.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "lottie-to-svg": "^1.0.0",
    "mini-svg-data-uri": "^1.4.4",
    "svgo": "^2.8.0"
  },
  "peerDependencies": {
    "gatsby": "^4",
    "gatsby-source-filesystem": "^4",
    "svgo": "^2"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "before:init": [
        "yarn run format",
        "yarn run prepare"
      ]
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "ignoreRecommendedBump": true,
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {}
          ]
        }
      }
    }
  }
}
